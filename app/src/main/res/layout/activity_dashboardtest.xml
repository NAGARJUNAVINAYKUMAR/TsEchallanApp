        <RelativeLayout
            android:id="@+id/btm_RLyt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dbbottm">

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>